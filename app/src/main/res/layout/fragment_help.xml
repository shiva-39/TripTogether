<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#083257"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help &amp; Support"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Introduction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Introduction"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TripTogether helps bikers and convoys track real-time locations and navigate together using Google Maps API and Firebase."
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="16dp" />

            <!-- Getting Started -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Getting Started"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Create a Group: Tap 'Create Group' and share the code with members.\n\n• Join a Group: Enter the group code to start tracking.\n\n• Navigation: Use the map to see real-time locations."
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="16dp" />

            <!-- Features -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Features"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• SOS Button: Sends an emergency alert.\n\n• Geofencing Alerts: Notifies if a member moves too far.\n\n• Distance Alerts: Ensures the group stays within range.\n\n• Refresh Location: Manually update location.\n\n• Zoom In/Out: Adjust the map view."
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="16dp" />

            <!-- Troubleshooting -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Troubleshooting"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Location Not Updating? Enable GPS, check internet, restart the app.\n\n• Can’t Join a Group? Verify the group code, check if the group is active.\n\n• Battery Tips: Use low-power mode, turn off GPS when idle."
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="16dp" />

            <!-- Contact Support -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Contact Support"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Email: support@triptogether.com\n\n• Check FAQs for more help."
                android:textSize="16sp"
                android:textColor="#666666"
                android:paddingBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>